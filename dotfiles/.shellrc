export EDITOR=hx
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# alias {ls,ll,l}='ls -laFh --color=auto --group-directories-first'
alias {ls,ll,l}="gls -laFh --color --group-directories-first"

# Some more alias to avoid making mistakes:
alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'

# Personal aliases
alias lt="tree --gitignore --dirsfirst"
alias lz="lazydocker"
alias lg="lazygit"
alias dff="df -h"
alias duu="du -hsc *"
alias gs="git status"

# top 5 processes
alias t5="ps -eo comm,pcpu --sort -pcpu | head -5; ps -eo comm,pmem --sort -pmem | head -5"

# profile
eval $(ssh-agent) > /dev/null
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
PATH="$PATH:$HOME/go/bin"

